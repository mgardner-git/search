<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="allegiant">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>com.allegiant.customer.Customer</class>
		
		<properties>			
			<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"></property>
			<property name="hibernate.connection.password" value="1likework"></property>
			<property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/allegiant"></property>		
			<property name="hibernate.connection.username" value="root"></property>
		</properties>
		
	</persistence-unit>
</persistence>
